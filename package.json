{
    "name": "mixnode",
    "version": "0.1.0",
    "description": "Unofficial Mixcloud deskop application made with Electron & React.js",
    "main": "mixnode.js",
    "license": "MIT",
    "scripts": {
        "start": "electron ./src/mixnode",
        "start-dev": "NODE_ENV=development electron ./src/index",
        "build-main": "webpack --config ./config/webpack.electron.js",
        "build-client": "rm -rf ./src/dist && webpack --config ./config/webpack.prod.js --progress --profile --colors",
        "build": "npm run build-main && npm run build-client",
        "package": "build --linux",
        "server": "node ./server",
        "dev": "npm run server -- --hot",
        "test": "NODE_PATH=src nyc ava",
        "test:watch": ""
    },
    "build": {
        "productName": "Mixnode",
        "appId": "org.develar.Mixnode",
        "category": "public.app-category.tools",
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "files": [
            "dist/",
            "mixnode.js",
            "package.json"
        ],
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ]
        }
    },
    "directories": {
        "buildResources": "resources",
        "output": "release"
    },
    "bin": {
        "electron": "./node_modules/.bin/electron"
    },
    "ava": {
        "babel": "inherit",
        "require": [
            "babel-register",
            "ignore-styles",
            "./test/helpers/setup.js"
        ]
    },
    "keywords": [
        "mixnode",
        "mixcloud",
        "music",
        "electron",
        "react",
        "redux",
        "player"
    ],
    "author": {
        "name": "Ivan Mrvelj",
        "email": "sk8raid@gmail.com",
        "url": "https://github.com/imrvelj"
    },
    "devDependencies": {
        "ava": "^0.17.0",
        "babel-core": "^6.9.0",
        "babel-eslint": "^6.0.4",
        "babel-loader": "^6.2.4",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-react": "^6.5.0",
        "babel-preset-stage-2": "^6.18.0",
        "babel-register": "^6.18.0",
        "css-loader": "^0.23.1",
        "devtron": "^1.4.0",
        "electron": "^1.4.13",
        "electron-builder": "^11.2.3",
        "enzyme": "^2.7.0",
        "eslint": "^2.10.2",
        "eslint-loader": "^1.6.1",
        "eslint-plugin-react": "^5.1.1",
        "file-loader": "^0.9.0",
        "html-webpack-plugin": "^2.24.1",
        "ignore-styles": "^5.0.1",
        "json-loader": "^0.5.4",
        "minimist": "^1.2.0",
        "node-sass": "^4.1.1",
        "nyc": "^10.0.0",
        "react-addons-test-utils": "^15.4.2",
        "sass-loader": "^4.1.1",
        "sinon": "^1.17.7",
        "source-map-loader": "^0.1.5",
        "style-loader": "^0.13.1",
        "webpack": "^1.12.9",
        "webpack-dev-server": "^1.14.0",
        "webpack-dotenv-plugin": "^1.4.0",
        "webpack-merge": "^2.3.1",
        "webpack-validator": "^2.3.0"
    },
    "dependencies": {
        "asar": "^0.13.0",
        "axios": "^0.11.1",
        "babel-polyfill": "^6.20.0",
        "dotenv": "^2.0.0",
        "history": "^4.4.1",
        "lodash": "^4.17.4",
        "react": "^15.4.2",
        "react-dom": "^15.4.2",
        "react-redux": "^5.0.1",
        "react-router": "^3.0.0",
        "redux": "^3.6.0",
        "redux-thunk": "^2.1.0",
        "webpack-dev-middleware": "^1.9.0",
        "webpack-hot-middleware": "^2.15.0"
    }
}
